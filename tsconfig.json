{
	"compilerOptions": {
		"baseUrl": "./src",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ES6",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "nodenext",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"experimentalDecorators": true,
		"paths": {
			"@/*": ["./*"],
			"@root/*": ["../*"]
		},
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true
	},
	"include": ["**/*.ts", "**/*.tsx"]
}
